# http://editorconfig.org
root = true

[*]
# 文字コードをUTF-8 (BOM付き) に設定（文字化け防止）
charset = utf-8-bom
# 改行コードをWindows標準のCRLFに設定（Visual Studioとの互換性）
end_of_line = crlf
# ファイルの末尾に空行を入れる
insert_final_newline = true
# 行末の不要な空白を削除する
trim_trailing_whitespace = true
# インデント設定
indent_style = space
indent_size = 4

[*.{cs,cpp,h,hpp}]
# C++, C# などのソースファイル固有の設定
indent_size = 4

[*.{sln,vcxproj,vcxproj.filters}]
# ソリューションファイルやプロジェクトファイルは、ツールによってShift-JISを要求される場合があるため、
# 必要に応じて個別に設定を残しますが、基本はcharsetを指定しないか、システムに従わせます.
